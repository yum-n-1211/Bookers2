<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render partial: 'layouts/left', locals: {user: current_user ,book: @book} %>
  
  <div class="col-md-8 offset-md-1">

    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image("40x40") %></td>
          <td><%= link_to book.title, book_path(book.id)%></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  
  </div>
</div>