<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render partial: 'layouts/left', locals: {user: @book.user ,book: @book} %>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image("40x40") %>
            <br><%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Destroy', book_path, method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか?" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  </div>
</div>