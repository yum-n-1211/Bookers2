<h2>Book detail</h2>

<table>
  <tbody>
    <tr>
      <td><%= @book.user.name %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか?" %>
        <% end %>
      </td>
      </tr>
  </tbody>
</table>