<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image("100x100") %>
  <table class="table">
    <tbody>
      <tr>
	      <th>name</th>
	      <th><%= user.name =%></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%= user.introduction =%></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to(edit_user_path(user.id), class: "btn btn-outline-secondary btn-block") do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

<h2 class="mt-3">New book</h2>
  <%= form_with model: book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <br><%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
</div>